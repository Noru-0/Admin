<script>
    document.addEventListener('DOMContentLoaded', () => {
        const currentURL = window.location.href;
        // Xác định mục đang được chọn dựa trên URL
        document.querySelectorAll('.sidebar a').forEach(link => {
            if (link.href === window.location.href) {
                link.classList.add('selected');
            }
        });

        // Gán sự kiện click để duy trì trạng thái "đã chọn"
        document.querySelector('.sidebar').addEventListener('click', function (event) {
            let target = event.target;
            while (target && target.tagName !== 'A') {
                target = target.parentElement;
            }
            if (target && target.tagName === 'A') {
                // Xóa trạng thái "đã chọn" khỏi tất cả các mục
                document.querySelectorAll('.sidebar a').forEach(link => link.classList.remove('selected'));

                // Gắn trạng thái "đã chọn" vào mục được click
                target.classList.add('selected');
            }
        });
    });
</script>

<style>
    /* CSS cho trạng thái đã chọn */
    .sidebar a.selected {
        background-color: #fbbf24;
        /* bg-yellow-500 */
        color: #000;
        /* text-black */
    }

    /* Hover không ảnh hưởng đến trạng thái đã chọn */
    .sidebar a.selected:hover {
        background-color: #fbbf24 !important;
        color: #000 !important;
    }
</style>